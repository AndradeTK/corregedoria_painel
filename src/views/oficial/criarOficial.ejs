      <li class="side-item">
        <a href="/imagens">
          <i class="fa-solid fa-image"></i>
          <span class="item-description"> Imagens </span>
        </a>
      </li>


 

      <%if (perm) { %>
        <li class="side-item">
          <a href="/logs">
            <i class="fa-solid fa-clock"></i>
            <span class="item-description"> Logs </span>
