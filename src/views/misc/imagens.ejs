<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/img/corr_icon.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/imagens.css" />
    <link rel="stylesheet" href="/css/global.css" />


    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>Imagens - Painel Corregedoria</title>
  </head>

<!-- Começo Side Bar -->

<nav id="sidebar">
  <div id="sidebar_content">
    <div id="user">
       <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" id="user_avatar" alt="Avatar" />

       <p id="user_infos">
          <span class="item-description"> <%= user.nomepm == null ? user.username : user.nomepm %> </span>
          <span class="item-description" > <%= user.patentepm == null ?user.id : user.patentepm %> </span>
        </p>
    </div>

    <ul id="side_items">
      <li class="side-item ">
        <a href="/home">
          <i class="fa-solid fa-chart-line"></i>
          <span class="item-description"> Início </span>
        </a>
      </li>

      
      <li class="side-item ">
        <a href="/inqueritos">
          <i class="fa-regular fa-folder-open"></i>
          <span class="item-description"> Inquéritos </span>
        </a>
      </li>


      <li class="side-item ">
        <a href="/oficiais">
          <i class="fa-solid fa-user-group"></i>
          <span class="item-description"> Oficiais </span>
        </a>
      </li>


      <li class="side-item">
        <a href="/blitz">
          <i class="fa-solid fa-road-barrier"></i>
          <span class="item-description"> Blitz </span>
        </a>
      </li>

      <li class="side-item active">
        <a href="/imagens">
          <i class="fa-solid fa-image"></i>
          <span class="item-description"> Imagens </span>
        </a>
      </li>


        <%if (perm) { %>
          <li class="side-item">
            <a href="/logs">
              <i class="fa-solid fa-clock"></i>
              <span class="item-description"> Logs </span>
            </a>
          </li>
          
  
          <li class="side-item">
            <a href="/configuracoes">
              <i class="fa-solid fa-gear"></i>
              <span class="item-description"> Configurações </span>
            </a>
          </li>
        <%}%>
    </ul>

    <button id="open_btn">
      <i id="open_btn_icon" class="fa-solid fa-chevron-right"></i>
    </button>
  </div>

  <a href="/logout"> <div id="logout">
    <button id="logout_btn">
      <i class="fa-solid fa-right-from-bracket"></i>
    
   <span class="item-description"> Logout </span>
    </button>
  </div></a>
</nav>

  <!-- Fim Side Bar -->


  <body>
    <div class="corpo">


      <header> 

        <div class="text_inq">
            <h1>    <i class="fa-solid fa-image"></i>Acervo de Imagens</h1>
      </div>

      </header>

      <main>
        <div class="text_sec">
          <h1>   <i class="fa-solid fa-file-lines"></i> Inquéritos</h1>
          
    </div>
        <div class="image-container" >
          <% url.forEach(function(imagem) { %>
       <a href="/inqueritos/visualizar/id=<%=imagem.inquerito_id%>">   <img src="<%= imagem.url %>" alt="Imagem" id="expandImage"></a>
          <% }); %>
          
        </div>
     
    <div class="vertical-line"></div>
    <div class="text_sec">
      <h1>   <i class="fa-solid fa-user-group"></i> Oficiais</h1>
</div>
        <div class="image-container" >
          <% url.forEach(function(imagem) { %>
          <img src="<%= imagem.url %>" alt="Imagem" id="expandImage">
          <% }); %>
          
        </div>
    
    <div class="vertical-line"></div>
    <div class="text_sec">
      <h1>  <i class="fa-solid fa-road-barrier"></i> Blitz</h1>
</div>
        <div class="image-container" >
          <% url.forEach(function(imagem) { %>
          <img src="<%= imagem.url %>" alt="Imagem" id="expandImage">
          <% }); %>
          
        </div>
    
      
    
      </main>
    </div>
  </body>

  <script>
    document.getElementById("open_btn").addEventListener("click", function () {
      document.getElementById("sidebar").classList.toggle("open-sidebar");
    });


    function expandImage() {
    var modal = document.getElementById("modal");
    var fullImage = document.getElementById("fullImage");
    var smallImage = document.getElementById("expandImage");

    modal.style.display = "block";
    fullImage.src = smallImage.src;
}

function closeImage() {
    var modal = document.getElementById("modal");
    modal.style.display = "none";
}

  </script>
</html>
